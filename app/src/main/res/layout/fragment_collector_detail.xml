<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="collectorDetail"
            type="com.example.viniloapp.models.CollectorDetail" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/collector_id_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{collectorDetail.name}"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/collector_id_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{collectorDetail.email}"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/collector_id_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{collectorDetail.telephone}"
            android:textSize="20sp" />
    </FrameLayout>
</layout>
